<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CodeQuotes.MainPage">
    <Grid 
        x:Name="background">
        <Grid.Background>
            <LinearGradientBrush
                EndPoint="1,1">

                <GradientStopCollection>
                    
                <GradientStop
                    Offset="0"
                    Color="#051937" />
                <GradientStop
                    Offset=".25"
                    Color="#004d7a" />
                <GradientStop
                    Offset=".5"
                    Color="#008793" />
                <GradientStop
                    Offset=".75"
                    Color="#00bf72" />
                <GradientStop
                    Offset="1"
                    Color="#a8eb12" />
                </GradientStopCollection>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid 
            Margin="25" 
            RowDefinitions=".8*, .2*">

            <Label
                FontSize="50"
                TextColor="White"
                HorizontalTextAlignment="Center"
                VerticalOptions="Center"
                Text="Quote 1" 
                FontFamily="Serif"
                x:Name="quote" /> <!-- Alias of PTSerif-Regluar in MauiProgram.cs -->

            <Button
                Grid.Row="1"
                BackgroundColor="Black"
                Opacity=".4"
                Text="Get New Quote" 
                FontFamily="Serif"
                x:Name="btnGenerateQuote"
                Clicked="btnGenerateQuote_Clicked" />
        </Grid>
    </Grid>
</ContentPage>
